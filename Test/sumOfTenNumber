C++ Code:

#include <iostream>
using namespace std;

int sumOfTenNumber(int& num)
{
    int sum = 0;
    for(int i = 1 ; i<=10 ; i++)
    {
          int number;
          cout << "Enter The Number  " <<   i  << " : " ;
          cin >> number;
          sum = sum + number ;
    }
    return sum;
}

void sumOfTenNumberTest()
{
        int num = 10;
        int result = sumOfTenNUmber(num);
